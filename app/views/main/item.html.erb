<%= provide(:body_id, 'item') %>
<div class="hero-unit">
  <p>录入你所属城市的个性化资料</p>
  <%= form_for @item, url: { action: 'p_item' } do |f| -%>
    <%= f.label :company, '选择所属城市' %>
    <%= f.select :company, options_from_collection_for_select(@cc, 'city_code', 'city_name'), { select: 0, include_blank: '请选择你所在城市' } %>
    <%= f.label :name, '联系人' %>
    <%= f.text_field :name %>
    <%= f.label :contact_info, '联系人方式' %>
    <%= f.text_field :contact_info %>
    <%= f.label :mac, 'MAC地址' %>
    <%= f.text_field :mac %>
    <%= f.label :comment, '备注' %>
    <%= f.text_field :comment %>
    <br>
    <%= f.submit('提交数据', class: 'btn btn-primary btn-large') %>

  <% end %>
</div>
